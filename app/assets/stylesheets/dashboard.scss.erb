@import 'variables';

.travel-icons {
  display: flex; 
  justify-content: flex-start;
  padding: 2em 0;
  .icon {
    display: flex;
    position: relative;
    margin-right: 1em;
    flex-basis: 10em;
    border-radius: 50%;
    background-color: #8fca81; 
    height: auto;

    img {
      width: 100%;
      height: 100%;
    }

    .rotate {
      width: 34%;
      height: 34%;
      position: absolute;
      left: 55.5%;
      top: 42%;
      animation-name: rotate;
        -webkit-animation-duration: 3s;
          animation-duration: 3s;
        -webkit-animation-iteration-count: infinite;
          animation-iteration-count: infinite;
        -webkit-animation-fill-mode: forwards;
          animation-fill-mode: forwards;
        -webkit-animation-play-state: paused;
          animation-play-state: paused;
        -webkit-animation-timing-function: linear;
          animation-timing-function: linear;
    }

    .rotate-two {
      left: 10%;
      top: 42%;
    }
  }

  .icon:hover:nth-child(2) .rotate {
        animation-play-state: running;
      }

    @keyframes rotate {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }

  .icon:last-child {
    margin-right: 0;
  }
}

#overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: -1;

  > video {
    min-height: 100%;
    min-width: 100%;
    position: fixed;
    opacity: 0.7;
    filter: sepia(0.5);
    -webkit-filter: sepia(0.5);
  }

  .info-block {
    position: absolute;
  }
}

@media (max-width: $mobile_width) {
  .travel-icons .icon {
    flex-basis: 5.5em;
    margin-right: 0.5em;
  }

  #overlay { display: none }
}

.app-header {
  color: <%= Track::DEFAULT_COLOR %>;
  h1 {
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.4);
  }
}

.footer {
  position: absolute;
  bottom: 0;
  right: 0;
  margin: 0 0.25em;
  font-weight: bold;
}